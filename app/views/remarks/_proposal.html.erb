<%= turbo_frame_tag remark do %>
  <div id="remark_<%= remark.id %>" class="w-full flex justify-between items-center">
    <%= link_to edit_meeting_room_remark_path(remark.meeting_room, remark), class: 'hover:bg-orange-100 rounded-lg h-10 w-full' do %>
      <div class="flex justify-start items-center ml-2 my-1 text-wrap">
        <%= render 'remarks/user_icon', remark: %>
        <%= remark.content %>
      </div>
    <% end %>
    <div class="text-center flex-shrink-0 mx-1">
      <%= link_to '献立へ登録', new_meal_plan_meal_path(remark.meeting_room.meal_plan, remark:), data: { turbo_frame: '_top' },
                                                                                            class: 'rounded-full py-1 px-2 bg-white text-red-400 border-2 border-red-400/70 inline-block hover:bg-red-400 hover:text-white' %>
    </div>
  </div>
<% end %>
