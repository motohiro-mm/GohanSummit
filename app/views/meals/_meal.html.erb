<div id="<%= dom_id meal %>" class="px-2 py-5">
  <div class="flex items-center mb-4">
    <%= image_tag("meals/#{meal.timing}.svg", class: 'page-icon text-center mr-2', alt: alt_meal_timing(meal.timing)) %>
    <span class="block font-bold text-lg"><%= Meal.human_attribute_name("timing.#{meal.timing}") %></span>
  </div>

  <div class="my-3 flex items-center justify-start">
    <span class="min-w-[4rem]"><%= Meal.human_attribute_name(:name) %></span>
    <strong class="text-base md:text-lg"><%= meal.name %></strong>
  </div>

  <% if meal.memo.present? %>
    <div class="my-3 flex items-center justify-start">
      <span class="min-w-[4rem]"><%= Meal.human_attribute_name(:memo) %></span>
      <span class=""><%= safe_join(meal.memo.split("\n"), tag.br) %></span>
    </div>
  <% end %>
</div>
