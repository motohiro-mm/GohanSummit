<%= form_with(model: [meal_plan, meal]) do |form| %>
  <%= render 'layouts/error_messages', model: meal %>
  <div class="my-6">
    <%= form.hidden_field :id %>
    <div id="timing_checkbox" class="checkbox-3 flex justify-center gap-4 md:gap-16">
      <% Meal.timings.keys.each do |timing| %>
        <div class="radio-wrapper flex items-center">
          <%= form.radio_button :timing, timing, checked: (timing == 'lunch'), class: 'radio-input' %>
          <%= form.label "timing_#{timing}", Meal.human_attribute_name("timing.#{timing}"), class: 'radio-label' %>
        </div>
      <% end %>
    </div>
    <%= form.hidden_field :name, value: form.object.name %>
    <%= form.hidden_field :memo, value: '' %>
  </div>
  <div class="m-2 text-center">
    <%= form.submit '登録', class: 'rounded-full py-3 px-7 bg-red-400 text-white' %>
  </div>
<% end %>
